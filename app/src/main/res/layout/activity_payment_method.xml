<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillActivity"
    android:background="@drawable/b4">

    <TextView
        android:id="@+id/txtBills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:text="Bills"
        android:textColor="#304062"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBills"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_below="@id/txtBills"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#EAEEF7"
        app:cardCornerRadius="15dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPayment"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:text="Payment Method"
                android:textColor="@color/black"
                app:backgroundTint="#A1B0CF"
                app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckOut"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/btnPayment"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="70dp"
            android:text="Check Out"
            android:textColor="@color/white"
            app:backgroundTint="#E21313"
            app:cornerRadius="50dp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>