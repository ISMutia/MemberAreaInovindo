<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b6"
    tools:context=".ui.paket.InfoPaketActivity">

    <TextView
        android:id="@+id/txtInfoPaket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:text="Info Paket"
        android:textColor="#304062"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/R1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtInfoPaket"
        android:layout_marginTop="150dp">

        <ImageView
            android:id="@+id/imgSilver"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/silver" />

        <RelativeLayout
            android:id="@+id/relativeSilver"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_toRightOf="@id/imgSilver"
            android:orientation="horizontal"
            android:padding="35dp">

            <TextView
                android:id="@+id/txtNamaPaket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Silver"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHargaPaket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNamaPaket"
                android:text="Rp.3.500.000"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeGold"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_marginTop="117dp"
            android:layout_toRightOf="@id/imgGold"
            android:orientation="horizontal"
            android:padding="35dp">

            <TextView
                android:id="@+id/txtNamaPaket2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Gold"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHargaPaket2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNamaPaket2"
                android:text="Rp.5.000.000"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativePlatinum"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_marginTop="234dp"
            android:layout_toRightOf="@id/imgPlatin"
            android:orientation="horizontal"
            android:padding="35dp">

            <TextView
                android:id="@+id/txtNamaPaket3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Platinum"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHargaPaket3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNamaPaket3"
                android:text="Rp.7.000.000"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgGold"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@id/imgSilver"
            android:layout_marginTop="8dp"
            android:src="@drawable/gold" />

        <ImageView
            android:id="@+id/imgPlatin"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@id/imgGold"
            android:layout_marginTop="8dp"
            android:src="@drawable/platin" />


    </RelativeLayout>

</RelativeLayout>