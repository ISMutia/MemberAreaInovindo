<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillActivity"
    android:background="@drawable/b4">

    <TextView
        android:id="@+id/txtBills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:text="Bills"
        android:textColor="#304062"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBills"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_below="@id/txtBills"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#EAEEF7"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="15dp"
                android:text="Hai Anastasia,"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNoBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Bills :"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/txtPType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package Type :"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/txtPname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Name :"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/txtDomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domain :"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/txtDdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date :"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/txtSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/txtP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Gold"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp">
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckOut"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/linear2"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="70dp"
                android:text="Check Out"
                android:textColor="@color/white"
                app:backgroundTint="#E21313"
                app:cornerRadius="50dp"/>


        </LinearLayout>





        <!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/rvBill"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            tools:listitem="@layout/list_bill"/>-->

    </androidx.cardview.widget.CardView>


</RelativeLayout>