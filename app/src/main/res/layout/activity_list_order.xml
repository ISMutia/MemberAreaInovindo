<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListOrderActivity"
    android:background="@drawable/b4">

    <TextView
        android:id="@+id/txtlistorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="List Order"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:textColor="#304062"
        android:textSize="30sp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="330dp"
        app:backgroundTint="@color/white"
        android:src="@drawable/dropdown"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvlistorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtlistorder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/list_order" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabTambahPelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:fabSize="normal"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        app:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_add_24"
        />


</RelativeLayout>